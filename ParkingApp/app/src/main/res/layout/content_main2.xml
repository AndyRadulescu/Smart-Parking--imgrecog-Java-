<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.smart.andyradulescu.parkingapp.Main2Activity"
    tools:showIn="@layout/activity_main2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        android:src="@drawable/bmw" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="63dp"
            android:shadowColor="@color/textColor"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="@string/select_the_parking_lot"
            android:textColor="@color/shadowTextColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/numberOfPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/textColor"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text=""
            android:textColor="@color/shadowTextColor"
            android:textSize="15sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="379dp"
            android:layout_marginTop="70dp"
            android:columnCount="2"
            android:rowCount="2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="50dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/button_selector"
                android:onClick="showParking1"
                android:shadowColor="@color/shadowTextColor"
                android:shadowDx="-5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/section_1"
                android:textAlignment="gravity"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/button_selector"
                android:onClick="showParking2"
                android:shadowColor="@color/shadowTextColor"
                android:shadowDx="-5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/section_2"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginBottom="100dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/button_selector"
                android:onClick="showParking3"
                android:shadowColor="@color/shadowTextColor"
                android:shadowDx="-5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/section_3"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="100dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/button_selector"
                android:onClick="showParking4"
                android:shadowColor="@color/shadowTextColor"
                android:shadowDx="-5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/section_4"
                android:textColor="@color/textColor" />

        </GridLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
