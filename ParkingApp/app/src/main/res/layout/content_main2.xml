<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anama.parkingapp.Main2Activity"
    tools:showIn="@layout/activity_main2">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/button_selector"
            android:shadowColor="#7B1FA2"
            android:shadowDx="-5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="@string/section_2"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button6"
            android:layout_centerVertical="true"
            android:background="@drawable/button_selector"
            android:shadowColor="#7B1FA2"
            android:shadowDx="-5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="@string/section_4"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button8"
            android:layout_alignBottom="@+id/button8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="57dp"
            android:layout_marginStart="57dp"
            android:background="@drawable/button_selector"
            android:shadowColor="#7B1FA2"
            android:shadowDx="-5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="@string/section_3"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button6"
            android:layout_alignBottom="@+id/button6"
            android:layout_alignLeft="@+id/button12"
            android:layout_alignStart="@+id/button12"
            android:background="@drawable/button_selector"
            android:onClick="Action"
            android:shadowColor="#7B1FA2"
            android:shadowDx="-5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="@string/section_1"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignParentTop="true"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"
            android:shadowColor="#7B1FA2"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="@string/select_the_parking_lot"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
