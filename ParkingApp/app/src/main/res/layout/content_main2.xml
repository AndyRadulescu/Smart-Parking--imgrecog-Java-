<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/super_cool_parking_lot"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.smart.andyradulescu.parkingapp.Main2Activity"
    tools:showIn="@layout/activity_main2">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="63dp"
            android:shadowColor="#7B1FA2"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="@string/select_the_parking_lot"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/numberOfPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#7B1FA2"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2">

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="50dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/button_selector"
                android:onClick="showParking"
                android:shadowColor="#7B1FA2"
                android:shadowDx="-5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/section_1"
                android:textAlignment="gravity"
                android:textColor="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/button_selector"
                android:shadowColor="#7B1FA2"
                android:shadowDx="-5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/section_2"
                android:textColor="@android:color/holo_red_dark" />


            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginBottom="100dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/button_selector"
                android:shadowColor="#7B1FA2"
                android:shadowDx="-5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/section_3"
                android:textColor="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="100dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/button_selector"
                android:shadowColor="#7B1FA2"
                android:shadowDx="-5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/section_4"
                android:textColor="@android:color/holo_red_dark" />

        </GridLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
