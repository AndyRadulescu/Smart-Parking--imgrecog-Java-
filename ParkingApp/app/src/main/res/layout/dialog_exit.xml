<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/dialog_error_content_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Do you realy want to exit from application?"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp"
        android:layout_marginTop="188dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    
    <Button
        android:id="@+id/no"
        android:layout_width="65dp"
        android:layout_height="40dip"

        android:gravity="center"
        android:text="NO"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="104dp"
        android:layout_alignBaseline="@+id/yes"
        android:layout_alignBottom="@+id/yes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/yes"
        android:layout_width="65dp"
        android:layout_height="40dip"

        android:gravity="center"
        android:text="yes"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="67dp"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_below="@+id/dialog_error_content_text"
        android:layout_toRightOf="@+id/no"
        android:layout_toEndOf="@+id/no" />


</RelativeLayout>
